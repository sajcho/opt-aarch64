# Description:	C macros for hash tables and more
# URL:		http://troydhanson.github.io/uthash/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends oon:	perl

name=uthash
version=2.3.0
release=0
source=(https://github.com/troydhanson/${name}/archive/v${version}/${name}-${version}.tar.gz)

build() {
	cd ${name}-${version}

	make -C tests
	make -C tests/threads

	install -d $PKG/usr/include
	install -m 0644 src/*.h $PKG/usr/include/
}
