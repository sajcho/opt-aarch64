# Description:	Documentation meta-data library, designed as a replacement for Scrollkeeper
# URL:		https://rarian.freedesktop.org/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	libxslt

name=rarian
version=0.8.1
release=0
source=(https://download.gnome.org/sources/${name}/0.8/${name}-${version}.tar.bz2 \
	user-segfault.patch)

build() {
	cd ${name}-${version}

	patch -p1 -i $SRC/user-segfault.patch

	./configure \
		--build=aarch64-unknown-linux-gnu \
		--prefix=/usr \
		--localstatedir=/var \
		--enable-scrollkeeper-compat \
		--disable-static

	make

	make -j1 DESTDIR=$PKG install
}
