# Description:	XML library version 2
# URL:		http://xmlsoft.org/
# Maintainer:	Milan Buska, milan dot buska at gmail dot com
# Depends on:	zlib xz

name=libxml2
version=2.9.10
release=1
source=(http://xmlsoft.org/sources/$name-$version.tar.gz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--disable-static \
		--with-threads \
		--with-history \
		--without-python

	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/{doc,gtk-doc}
}
