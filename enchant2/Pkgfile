# Description:	A wrapper library for generic spell checking (v2)
# URL:		https://abiword.github.io/enchant/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	aspell glib hunspell

name=enchant2
_realname=enchant
version=2.3.2
release=1
source=(https://github.com/AbiWord/${_realname}/releases/download/v$version/${_realname}-$version.tar.gz)

build() {
	cd ${_realname}-$version

	./configure \
		--prefix=/usr \
		--disable-static \
		--with-aspell \
		--with-hunspell

	sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

	make V=1

	make DESTDIR=$PKG pkgdatadir=/usr/share/enchant-2 install

	find $PKG -type f -name '*.la' -delete
}
