# Description:	Library for accessing DVDs like a block device without having to bother about the decryption
# URL:		http://www.videolan.org/developers/libdvdcss.html
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com

name=libdvdcss
version=1.4.3
release=0
source=(https://download.videolan.org/pub/${name}/${version}/${name}-${version}.tar.bz2)

build() {
	cd ${name}-${version}

	./configure \
		--prefix=/usr

	make

	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/doc
}
