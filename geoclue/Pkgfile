# Description:	dbus geolocation service
# URL:		https://www.freedesktop.org/wiki/Software/GeoClue/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	avahi json-glib libnotify libsoup modemmanager

name=geoclue
version=2.5.7
release=0
source=(https://gitlab.freedesktop.org/$name/$name/-/archive/$version/$name-$version.tar.bz2)

build() {
	cd $name-$version

	build-meson \
		-Ddbus-srv-user=geoclue \
		-Ddbus-sys-dir=/usr/share/dbus-1/system.d \
		-Dintrospection=true \
		-Dgtk-doc=false \
		. build

	meson compile ${JOBS:+-j ${JOBS}} -C build

	DESTDIR=$PKG meson install --no-rebuild -C build
}
