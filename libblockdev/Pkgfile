# Description:	Library for manipulating block devices
# URL:		https://github.com/storaged-project/libblockdev
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	cryptsetup eudev glib gobject-introspection kmod libbytesize lvm2 ndctl nss parted python3 volume_key yaml

name=libblockdev
version=2.26
release=1
source=(https://github.com/storaged-project/${name}/releases/download/${version}-1/${name}-${version}.tar.gz)

build() {
	cd ${name}-${version}

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--with-python3 \
		--without-gtk-doc \
		--without-dmraid \
		--without-lvm_dbus

	make V=1

	make DESTDIR=$PKG install

	find $PKG -type f -name '*.la' -delete
}
