# Description:	Advanced Linux Sound Architecture (ALSA) utilities
# URL:		http://www.alsa-project.org
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	alsa-lib dialog gettext pciutils

name=alsa-utils
version=1.2.5.1
release=0
source=(ftp://ftp.alsa-project.org/pub/utils/${name}-${version}.tar.bz2 \
	alsa.finish alsa.run)

build() {
	cd ${name}-${version}

	./configure \
		--prefix=/usr \
		--disable-nls \
		--disable-xmlto

	make

	make DESTDIR=$PKG install

	# alsa runit service
	install -d $PKG/etc/sv/alsa
	install -m 0755 $SRC/alsa.run $PKG/etc/sv/alsa/run
	install -m 0755 $SRC/alsa.finish $PKG/etc/sv/alsa/finish
	ln -s /run/runit/supervise.alsa $PKG/etc/sv/alsa/supervise

	rm -r $PKG/usr/share/man/fr
}
