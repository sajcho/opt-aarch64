# Description:	Client-side decorations library for Wayland clients
# URL:		https://gitlab.gnome.org/jadahl/libdecor
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	cairo dbus pango wayland-protocols

name=libdecor
version=0.1.0
release=1
source=(https://gitlab.gnome.org/jadahl/${name}/-/archive/${version}/${name}-${version}.tar.gz)

build() {
	cd ${name}-${version}

	build-meson \
		-Ddemo=false \
		. build

	meson compile ${JOBS:+-j ${JOBS}} -v -C build

	DESTDIR=$PKG meson install --no-rebuild -C build
}
