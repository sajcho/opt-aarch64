# Description:	ALSA libraries
# URL:		http://www.alsa-project.org/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com

name=alsa-lib
version=1.2.4
release=0
source=(https://github.com/alsa-project/${name}/archive/v${version}.tar.gz \
	fix-dlo.patch)

build() {
	cd ${name}-${version}

	patch -p1 -i $SRC/fix-dlo.patch

	autoreconf -fiv

	./configure \
		--prefix=/usr \
		--disable-python \
		--with-plugindir=/usr/lib/alsa-lib \
		--without-debug

	make

	make DESTDIR=$PKG install
}
