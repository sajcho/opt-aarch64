# Description:	Open Source H265/HEVC video encoder
# URL:		http://x265.org
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	cmake nasm samurai

name=x265
version=3.5
release=1
source=(https://bitbucket.org/multicoreware/${name}_git/downloads/${name}_${version}.tar.gz)

build() {
	cd ${name}_${version}/build

	cmake ../source -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_CXX_FLAGS_NONE="$CXXFLAGS -Wno-restrict -Wno-format-overflow -Wno-unused-parameter -Wno-unused-variable" \
		-DENABLE_SHARED=TRUE \
		-Wno-dev

	ninja

	DESTDIR=$PKG ninja install
}
