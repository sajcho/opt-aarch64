# Description:	perl module for IPV6 operations
# URL:		https://metacpan.org/release/Socket6/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	perl

name=perl-socket6
_realname=Socket6
version=0.29
release=0
source=(https://cpan.metacpan.org/authors/id/U/UM/UMEMOTO/${_realname}-${version}.tar.gz)

build() {
	cd ${_realname}-${version}

	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make

	make test

	make DESTDIR=$PKG install

	find $PKG -name 'perllocal.pod' -or \
		-name '.packlist' | xargs rm
}
