# Description:	A library to handle Apple Property List format whereas it's binary or XML
# URL:		https://libimobiledevice.org/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	python3-cython glib swig

name=libplist
version=2.2.0
release=1
source=(https://github.com/libimobiledevice/${name}/archive/${version}/${name}-${version}.tar.gz)

build() {
	cd ${name}-${version}

	NOCONFIGURE=1 ./autogen.sh

	./configure \
		--prefix=/usr

	make

	make DESTDIR=$PKG install
}
