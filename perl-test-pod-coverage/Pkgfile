# Description:	Check for pod coverage in your distribution
# URL:		https://metacpan.org/release/Test-Pod-Coverage/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	perl perl-devel-symdump perl-pod-coverage perl-test-pod

name=perl-test-pod-coverage
_realname=Test-Pod-Coverage
version=1.10
release=0
source=(https://cpan.metacpan.org/authors/id/N/NE/NEILB/${_realname}-${version}.tar.gz)

build() {
	cd ${_realname}-${version}

	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make

	make test

	make DESTDIR=$PKG install

	find $PKG -name 'perllocal.pod' -or \
		-name '.packlist' | xargs rm
}
