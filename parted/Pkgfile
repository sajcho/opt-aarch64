# Description:	Utility to create, destroy, resize, check and copy partitions
# URL:		https://www.gnu.org/software/parted/parted.html
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	lvm2 ncurses readline util-linux

name=parted
version=3.4
release=1
source=(https://ftpmirror.gnu.org/gnu/${name}/${name}-${version}.tar.xz \
	fix-includes.patch \
	parted-include-sysmacros.patch)

build() {
	cd ${name}-${version}

	patch -p1 -i $SRC/fix-includes.patch
	patch -p1 -i $SRC/parted-include-sysmacros.patch

	./configure \
		--prefix=/usr \
		--enable-shared \
		--disable-static \
		--disable-nls \
		--with-readline

	make V=1

	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/info

	find $PKG -type f -name '*.la' -delete
}
