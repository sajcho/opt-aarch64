# Description:	A multiple-connection concurrent downloader
# URL:		https://github.com/axel-download-accelerator/axel
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	openssl3

name=axel
version=2.17.10
release=1
source=(https://github.com/axel-download-accelerator/${name}/releases/download/v${version}/${name}-${version}.tar.xz)

build() {
	cd ${name}-${version}

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--disable-nls

	make V=1

	make DESTDIR=$PKG install

	install -D -m 0644 doc/axelrc.example $PKG/etc/axelrc
}
