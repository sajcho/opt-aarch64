# Description:	Object interface for AF_INET|AF_INET6 domain sockets
# URL:		https://metacpan.org/pod/IO::Socket::INET6
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	perl perl-module-build perl-socket6

name=perl-io-socket-inet6
_realname=IO-Socket-INET6
version=2.72
release=0
source=(https://cpan.metacpan.org/authors/id/S/SH/SHLOMIF/${_realname}-${version}.tar.gz)

build() {
	cd ${_realname}-${version}

	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make

	make test

	make DESTDIR=$PKG install

	find $PKG -name 'perllocal.pod' -or \
		-name '.packlist' | xargs rm
}
