# Description:	Perl - Test exception based code
# URL:		https://metacpan.org/release/Test-Exception/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	perl perl-sub-uplevel

name=perl-test-exception
_realname=Test-Exception
version=0.43
release=0
source=(https://cpan.metacpan.org/authors/id/E/EX/EXODIST/${_realname}-${version}.tar.gz)

build() {
	cd ${_realname}-${version}

	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make

	make test

	make DESTDIR=$PKG install

	find $PKG -name 'perllocal.pod' -or \
		-name '.packlist' | xargs rm
}
