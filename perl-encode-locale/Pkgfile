# Description:	Perl module - Determine the locale encoding
# URL:		http://search.cpan.org/~gaas
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	perl

name=perl-encode-locale
_realname=Encode-Locale
version=1.05
release=0
source=(https://cpan.metacpan.org/authors/id/G/GA/GAAS/$_realname-${version}.tar.gz)

build() {
	cd ${_realname}-${version}

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make

	make test

	make DESTDIR=$PKG install

	find $PKG -name 'perllocal.pod' -or \
		-name '.packlist' | xargs rm
}
