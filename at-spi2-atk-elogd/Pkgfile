# Description:	A GTK+ module that bridges ATK to D-Bus at-spi - with deps dbus-elogind
# URL:		https://www.freedesktop.org/wiki/Accessibility/AT-SPI2/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	atk at-spi2-core-elogd

name=at-spi2-atk-elogd
_realname=at-spi2-atk
version=2.38.0
release=0
source=(https://download.gnome.org/sources/${_realname}/${version%.*}/${_realname}-${version}.tar.xz)

build() {
	cd ${_realname}-${version}

	build-meson . build

	meson compile ${JOBS:+-j ${JOBS}} -C build

	DESTDIR=$PKG meson install --no-rebuild -C build
}
