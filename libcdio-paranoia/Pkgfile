# Description:	CD paranoia on top of libcdio
# URL:		https://www.gnu.org/software/libcdio/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	libcdio

name=libcdio-paranoia
version=2.0.1
_realversion="10.2+${version/_p/+}"
release=1
source=(https://ftpmirror.gnu.org/gnu/libcdio/${name}-${_realversion}.tar.bz2)

build() {
	cd ${name}-${_realversion}

	sed -i 's/AM_CONFIG_HEADER/AC_CONFIG_HEADER/;s/$1+$2/$2/' configure.ac
	autoreconf -fiv

	./configure \
		--prefix=/usr \
		--disable-static

	make V=1

	make DESTDIR=$PKG install

	find $PKG -type f -name '*.la' -delete
}
