# Description:	minimal try/catch with proper preservation of $@
# URL:		https://search.cpan.org/dist/Try-Tiny/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	grep perl perl-capture-tiny perl-pod-coverage perl-sub-name

name=perl-try-tiny
_realname=Try-Tiny
version=0.30
release=0
source=(https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/${_realname}-${version}.tar.gz)

build() {
	cd ${_realname}-${version}

	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make

	make test

	make DESTDIR=$PKG install

	find $PKG -name 'perllocal.pod' -or \
		-name '.packlist' | xargs rm
}
