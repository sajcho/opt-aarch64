# Description:	Checks if the documentation of a module is comprehensive
# URL:		http://search.cpan.org/~rclamp/Pod-Coverage-0.23
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	perl perl-devel-symdump perl-pod-parser perl-test-pod

name=perl-pod-coverage
_realname=Pod-Coverage
version=0.23
release=0
source=(https://cpan.metacpan.org/authors/id/R/RC/RCLAMP/${_realname}-${version}.tar.gz)

build() {
	cd ${_realname}-${version}

	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make

	make test

	make DESTDIR=$PKG install

	find $PKG -name 'perllocal.pod' -or \
		-name '.packlist' | xargs rm
}
