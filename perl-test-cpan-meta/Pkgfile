# Description:	Validate your CPAN META.json files
# URL:		https://metacpan.org/release/Test-CPAN-Meta/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	perl

name=perl-test-cpan-meta
_realname=Test-CPAN-Meta
version=0.25
release=0
source=(https://cpan.metacpan.org/authors/id/B/BA/BARBIE/${_realname}-${version}.tar.gz)

build() {
	cd ${_realname}-${version}

	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make

	make test

	make DESTDIR=$PKG install

	find $PKG -name 'perllocal.pod' -or \
	-name '.packlist' | xargs rm
}
