# Description:	A callback framework for C++ the cairo graphics library
# URL:		http://cairographics.org/cairomm/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	cairo libsigc++2

name=cairomm12
_realname=cairomm
version=1.12.2
release=0
source=(https://cairographics.org/releases/${_realname}-${version}.tar.gz)

build() {
	cd ${_realname}-${version}

	NOCONFIGURE=1 ./autogen.sh

	./configure \
		--prefix=/usr

	sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

	make

	make DESTDIR=$PKG install

	rm -r $PKG/usr/share
}
