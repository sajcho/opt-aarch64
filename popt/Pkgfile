# Description:	A commandline option parser 
# URL:		https://github.com/rpm-software-management/popt
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	gettext

name=popt
version=1.18
release=0
source=(http://ftp.rpm.org/${name}/releases/popt-1.x/${name}-${version}.tar.gz)

build() {
	cd ${name}-${version}

	./configure \
		--prefix=/usr \
		--disable-nls

	make

	make DESTDIR=$PKG install
}
