# Description:	Modules for parsing/translating POD format documents
# URL:		https://metacpan.org/release/Pod-Parser/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	perl

name=perl-pod-parser
_realname=Pod-Parser
version=1.63
release=0
source=(https://cpan.metacpan.org/authors/id/M/MA/MAREKR/${_realname}-${version}.tar.gz)

build() {
	cd ${_realname}-${version}

	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')

	PERL_MM_USE_DEFAULT=1 perl -I. Makefile.PL INSTALLDIRS=vendor
	make

	make test

	make DESTDIR=$PKG install

	find $PKG -name 'perllocal.pod' -or \
		-name '.packlist' | xargs rm
}
