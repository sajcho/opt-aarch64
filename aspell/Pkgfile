# Description:	GNU aspell is a spell checker designed to replace ispell
# URL:		http://aspell.net
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	ncurses

name=aspell
version=0.60.8
release=1
source=(https://ftpmirror.gnu.org/gnu/$name/$name-$version.tar.gz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--disable-static \
		--disable-nls \
		--enable-curses=ncursesw \
		--enable-dict-dir=/usr/share/${name} \
		--enable-pkgdatadir=/usr/share/${name} \
		--enable-compile-in-filters

	make V=1

	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/info

	find $PKG -type f -name '*.la' -delete
}
